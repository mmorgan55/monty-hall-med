<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Tally" parent="AppTheme">
    <item name="android:textSize">50sp</item>
  </style>

  <style name="WinTally" parent="Tally">
    <item name="android:textColor">#00c000</item>
  </style>

  <style name="LoseTally" parent="Tally">
    <item name="android:textColor">#f00000</item>
  </style>

  <style name="Info" parent="AppTheme">
    <item name="android:textSize">30sp</item>
  </style>

</resources>
